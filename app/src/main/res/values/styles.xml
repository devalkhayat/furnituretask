<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/default_dark_color_1</item>
        <item name="colorPrimaryDark">@color/default_light_color_1</item>
        <item name="colorAccent">@color/default_dark_color_1</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="android:fontFamily">@font/fairuz_normal</item>
        <item name="android:windowBackground">@color/default_light_color_1</item>
    </style>


    <!-- Headers-->

    <style name="headerLargeStyleBlack">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/header_large_fontSize</item>
        <item name="android:fontFamily">@font/fairuz_bold</item>
    </style>

    <!-- End Headers -->


    <!-- Labels-->
    <style name="labelStyleDarkGray">
        <item name="android:textColor">@color/default_dark_color_1</item>
        <item name="android:textSize">@dimen/label_fontSize</item>
    </style>
    <style name="labelStyleGray">
        <item name="android:textColor">@color/default_dark_color_2</item>
        <item name="android:textSize">@dimen/label_fontSize</item>
    </style>
    <style name="labelStyleBlack">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/label_fontSize</item>
    </style>

    <style name="labelStyleBlackBold">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/label_fontSize</item>
        <item name="android:fontFamily">@font/fairuz_bold</item>
    </style>

    <style name="labelStyleRed">
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">@dimen/label_fontSize</item>
    </style>

    <style name="labelStyleWhiteBold">
        <item name="android:textColor">@color/default_light_color_1</item>
        <item name="android:textSize">@dimen/label_fontSize</item>
        <item name="android:fontFamily">@font/fairuz_bold</item>
    </style>
    <!-- End Labels-->


    <!-- Buttons -->
    <style name="ButtonTheme" >
        <item name="android:textSize">@dimen/button_fontSize</item>
        <item name="android:textColor">@color/default_light_color_1</item>


    </style>
    <!-- End Buttons -->


    <!-- Edit Text -->

    <style name="EditTextDefaultTheme" >

        <item name="android:textColor">@color/default_dark_color_1</item>
        <item name="android:textColorHint">@color/default_dark_color_2</item>
        <item name="android:gravity">right</item>

    </style>


    <!-- End Edit Text -->


</resources>